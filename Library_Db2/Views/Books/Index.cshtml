@model IEnumerable<Library_Db2.Models.Books>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-warning"> <i class="bi bi-plus-circle"></i> &nbsp; Create New Book</a>
        </div>
    </div>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
           <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["BookNameSort"]">@Html.DisplayNameFor(model => model.BookName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CategorySort"]">@Html.DisplayNameFor(model => model.Category)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSort"]">@Html.DisplayNameFor(model => model.Price)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PagesSort"]">@Html.DisplayNameFor(model => model.Pages)</a> 
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AuthorSort"]">@Html.DisplayNameFor(model => model.AuthorId)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) $
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Authors.AuthorName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-success"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a> 
                <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-primary" ><i class="bi bi-info-square"></i> &nbsp; Details</a> 
                <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-danger"><i class="bi bi-trash"></i> &nbsp; Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>