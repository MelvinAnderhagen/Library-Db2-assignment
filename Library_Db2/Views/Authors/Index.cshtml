@model IEnumerable<Library_Db2.Models.Authors>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Author list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-warning"> <i class="bi bi-plus-circle"></i> &nbsp; Create New Author</a>
        </div>
    </div>

<p>
    <a asp-action="Create">Create New Author</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telnumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telnumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuthorId" class="btn btn-success"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a> 
                <a asp-action="Details" asp-route-id="@item.AuthorId" class="btn btn-primary" ><i class="bi bi-info-square"></i> &nbsp; Details</a> 
                <a asp-action="Delete" asp-route-id="@item.AuthorId" class="btn btn-danger"><i class="bi bi-trash"></i> &nbsp; Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
